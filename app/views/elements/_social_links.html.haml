- number_word = 'five'
- case social_links.size
- when 1
  - number_word = 'one'
- when 2
  - number_word = 'two'
- when 3
  - number_word = 'three'
- when 4
  - number_word = 'four'
- when 5
  - number_word = 'five'
- when 6
  - number_word = 'six'

- delay = 1
- delay_each = 0.3
- classes = "#{number_word}-up"
.icon-bar.wow.fadeIn{ 'data-wow-delay' => "#{delay}s", :class =>  classes }
  - social_links.each do |service|
    - delay += delay_each
    - title = t service[:name]
    = link_to service[:url], title: title, class: ['wow', 'fadeIn', service[:name]], data: { 'wow-delay' => "#{delay}s" }, target: :blank do
      = ' '