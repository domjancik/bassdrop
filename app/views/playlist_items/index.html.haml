%h1 Listing playlist_items

%table
  %thead
    %tr
      %th Playlist
      %th Medium
      %th List order
      %th
      %th
      %th
      
  %tbody
    - @playlist_items.each do |playlist_item|
      %tr
        %td= playlist_item.playlist
        %td= playlist_item.medium
        %td= playlist_item.list_order
        %td= link_to 'Show', playlist_item
        %td= link_to 'Edit', edit_playlist_item_path(playlist_item)
        %td= link_to 'Destroy', playlist_item, :method => :delete, :data => { :confirm => 'Are you sure?' }

