- content_for :title do
  Events

- if user_admin?
  = link_to 'New', new_event_path, class: %w(button width-fill)

%h1.wow.fadeIn Upcoming

= render partial: 'events', object: @upcoming_events, locals: { xcount: 1 }

%h1.wow.fadeIn Past
#past.load-auto
  = link_to 'Load', events_path, remote: true, class: 'open-link', id: 'link', class: %w(button width-fill)
