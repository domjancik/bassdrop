- content_for :title do
  = @artist.title

%p#notice= notice

- if user_signed_in?
  = link_to 'Edit', edit_artist_path(@artist)
  \|
  = link_to 'Back', artists_path
  \|
  - if @artist.playlist.nil?
    = link_to 'Generate playlist', create_playlist_artist_path(@artist), method: :post
  - else
    = link_to 'Playlist', @artist.playlist

- no_content = @artist.events.empty? && @artist.description.blank? && @artist.playlist.blank?

.artist
  .row
    .small-12.medium-3.columns.wow.fadeInUp{ 'data-wow-duration' => "0.8s" }
      .release__profile
        = image_tag(@artist.image_url_cached, alt: @artist)
        .artist__profile__title= @artist.title
      %div
        = render partial: 'elements/social_links', object: @artist.social_links
      .artist__extra.margin-bottom.wow.fadeIn{ 'data-wow-delay' => "1.5s" }
        -#%h1.artist__extra__headline= @artist.title
        .artist__extra__location
          - unless @artist.city.blank?
            = "#{@artist.city.title},"
          = @artist.country.title
      - unless @artist.releases.empty?
        .artist__releases
          -#%h2 Works
          - xcount = @artist.releases.size > 1 ? 2 : 1
          = render partial: 'credit_grid', object: @artist.credits, locals: { xcount: xcount }
    .small-12.medium-9.columns
      = render partial: 'events/events', object: @artist.events.upcoming.limit(1), locals: { xcount: 1 }
      .wow.fadeInUp
        - unless @artist.description.blank?
          .artist__description.padded.margin-bottom
            %p
              = @artist.description
        - if no_content
          .artist__description.padded.margin-bottom
            %p
              There is nothing more about this artist yet.
            %p
              In the meantime,
              %strong check out these upcoming events!
      .wow.fadeIn{ 'data-wow-delay' => "1s" }
        = render partial: 'playlists/playlist_embed', object: @artist.playlist
      - if no_content
        = render partial: 'events/events', object: @upcoming_events

