- if user_admin?
  = link_to 'Edit', edit_artist_path(@artist), class: 'button'
  = link_to 'Back', artists_path, class: 'button'
  - if @artist.playlist.nil?
    = link_to 'Generate playlist', create_playlist_artist_path(@artist), method: :post, class: 'button'
  - else
    = link_to 'Playlist', @artist.playlist, class: 'button'